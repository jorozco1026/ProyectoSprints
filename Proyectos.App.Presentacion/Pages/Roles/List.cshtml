@page
@model Proyectos.App.Presentacion.Pages.Roles.ListModel
@{
   var searchString = Model.searchString; 
}
<h1>Listado de Roles</h1>
<p>
    @Html.ActionLink("Listar Todo", "./List")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar x Nombre: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    @foreach (var rol in Model.roles)
    {
        <tr>
            <td>@rol.id</td>
            <td>@rol.nombre</td>
            <td>@rol.descripcion</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-rolId="@rol.id">
                    Detalle</a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-rolId="@rol.id">
                    Editar
                </a>
            </td> 

            <td>
                <a class="btn btn-danger table-btn" asp-page="./Delete" asp-route-rolId="@rol.id">
                    Eliminar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar un rol</a>